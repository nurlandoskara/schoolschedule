                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.SubjectGroupId, "SubjectGroupId", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("SubjectGroupId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SubjectGroupId, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.SubjectTeacherId, "SubjectTeacherId", htmlAttributes: new { @class = "control-label col-md-2" })
