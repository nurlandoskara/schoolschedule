<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SchoolSchedule</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Site.css" rel="stylesheet" />

</head>
<body>
<div class="container">
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    @Html.ActionLink("School Schedule", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            @Html.ActionLink("Главная", "Index", "Home", new {area = ""}, new {@class = "nav-item nav-link"})
            @Html.ActionLink("Предметы", "Index", "Subjects", new {area = ""}, new {@class = "nav-item nav-link"})
            @Html.ActionLink("Группы", "Index", "Groups", new {area = ""}, new {@class = "nav-item nav-link"})
            @Html.ActionLink("Преподаватели", "Index", "Teachers", new {area = ""}, new {@class = "nav-item nav-link"})
            @Html.ActionLink("Предметы по учителям", "IndexByClass", "SubjectTeachers", new {area = ""}, new {@class = "nav-item nav-link"})
            @Html.ActionLink("Предметы по группам", "IndexByGroup", "SubjectGroups", new {area = ""}, new {@class = "nav-item nav-link"})
            @Html.ActionLink("Уроки", "Index", "Lessons", new {area = ""}, new {@class = "nav-item nav-link"})
        </div>
        <span class="navbar-text">
            @Html.Partial("_LoginPartial")
        </span>
    </div>
</nav>

<div class="body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
</div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
