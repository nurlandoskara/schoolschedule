@model SchoolSchedule.ViewModels.BaseViewModel<SchoolSchedule.Models.Teacher>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
    <div class="btn-group mr-2" role="group" aria-label="First group">
        @Html.ActionLink("Добавить", "Create", null, new { @class = "btn btn-success" })
    </div>
</div>

<table class="table">
    <caption>List of teachers</caption>
    <thead>
        <tr>
            <th scope="col">#</th>
            <th>
                Имя
            </th>
            <th>
                Фамилия
            </th>
            <th>
                Отчество
            </th>
            <th>Удален</th>
            <th>Рекдактирование</th>
        </tr>
    </thead>
    <tbody class="table-hover">
    @{var rowNumber = 0;}
    @foreach (var item in Model.List)
    {
        string rowClass;
        {
            rowClass = (item.IsDeleted) ? "table-danger" : null;
            rowNumber++;
        }
        <tr class="@rowClass">
            <th scope="row">@rowNumber</th>
            <td>
                @Html.DisplayFor(modelItem => item.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatronymicName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
    </tbody>
</table>